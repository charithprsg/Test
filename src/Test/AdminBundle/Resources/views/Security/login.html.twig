    <link rel="stylesheet" href="{{ asset('bundles/testadmin/css/bootstrap.min.css') }}" media="all">
    <link rel="stylesheet" href="{{ asset('bundles/testadmin/js/bootstrap.min.js') }}" media="all">

    <!-- Custom styles for this template -->
